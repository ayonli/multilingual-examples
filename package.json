{
    "name": "multilingual-examples",
    "version": "1.0.0",
    "scripts": {
        "build": "npm run build:go && npm run build:web",
        "build:go": "cd go && go build -o ../dist/go/main main.go && cd ..",
        "build:web": "vite build",
        "sanitize": "npm run sanitize:go && npm run sanitize:ts",
        "sanitize:go": "cd go && golangci-lint fmt && golangci-lint run --fix && cd ..",
        "sanitize:ts": "deno fmt && deno lint --fix && tsc --noEmit"
    },
    "dependencies": {
        "@ayonli/jsext": "^1.9.0",
        "@vitejs/plugin-react": "^5.1.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "tslib": "^2.8.1"
    },
    "devDependencies": {
        "@types/node": "^24.2.0",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "vite": "^7.1.12",
        "vite-tsconfig-paths": "^5.1.4"
    }
}
